<h1>Edit Perangkat</h1>
<form action="/perangkat/edit/<%= perangkat.id %>" method="POST">
  <div class="mb-3">
    <label>Nama Perangkat</label>
    <input name="nama_perangkat" class="form-control" value="<%= perangkat.nama_perangkat %>" required />
  </div>

  <div class="mb-3">
    <label>Topik Data (MQTT)</label>
    <input name="topik_mqtt" class="form-control" value="<%= perangkat.topik_mqtt %>" required />
  </div>

  <div class="mb-3">
    <label>Topik Kontrol (MQTT)</label>
    <input name="topik_kontrol" class="form-control" value="<%= perangkat.topik_kontrol || '' %>" placeholder="(opsional)" />
  </div>

  <div class="mb-3">
    <label>Prioritas</label>
    <select name="prioritas" class="form-select">
      <option value="Tinggi" <%= perangkat.prioritas === 'Tinggi' ? 'selected' : '' %>>Tinggi</option>
      <option value="Sedang" <%= perangkat.prioritas === 'Sedang' ? 'selected' : '' %>>Sedang</option>
      <option value="Rendah" <%= perangkat.prioritas === 'Rendah' ? 'selected' : '' %>>Rendah</option>
    </select>
  </div>

  <div class="mb-3">
    <label>Daya (Watt)</label>
    <input type="number" name="daya_watt" class="form-control" value="<%= perangkat.daya_watt %>" required />
  </div>

  <div class="mb-3">
    <label>Status</label>
    <select name="status" class="form-select">
      <option value="ON" <%= perangkat.status === 'ON' ? 'selected' : '' %>>ON</option>
      <option value="OFF" <%= perangkat.status === 'OFF' ? 'selected' : '' %>>OFF</option>
    </select>
  </div>

  <button class="btn btn-primary">Update</button>
</form>
