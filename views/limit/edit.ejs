<div class="container py-4">
  <h2 class="mb-4">Edit Limit Energi</h2>

  <form action="/limit/<%= limit.id %>/edit" method="POST" class="row g-2 mb-4">
    <div class="col-md-3">
      <input type="number" step="0.01" name="batas_kwh" class="form-control" value="<%= limit.batas_kwh %>" required>
    </div>
    <div class="col-md-3">
      <input type="datetime-local" name="jam_mulai" class="form-control"
        value="<%= limit.jam_mulai.toISOString().slice(0,16) %>" required>
    </div>
    <div class="col-md-3">
      <input type="datetime-local" name="jam_selesai" class="form-control"
        value="<%= limit.jam_selesai.toISOString().slice(0,16) %>" required>
    </div>
    <div class="col-md-3">
      <button class="btn btn-primary w-100" type="submit">Simpan Perubahan</button>
    </div>
  </form>

  <a href="/limit" class="btn btn-secondary">Kembali</a>
</div>
